<!-- /templates/customers/login.liquid -->
{{ 'style.create-customer.css' | asset_url | stylesheet_tag }}
<div class="create-customer__container">
    <div class="create-customer__container--inner create-customer">
        <h3 class="heading--tertiary create-customer__heading">Log in</h3>
        {% form 'customer_login' %}
            {{ form.errors | default_errors }}
            <label class="p--secondary" for="email">Email Address</label>
            <div class="form__input-container" >
                <input class="form__input" type="email" value="" name="customer[email]" placeholder="andy@avexdesigns.com" required />
            </div>
            <label class="p--secondary" for="password">Password</label>
            <div class="form__input-container" >
                <input class="form__input" type="password" value="" name="customer[password]" placeholder="• • • • • • • •" required />
                <p class="p--primary redirect__forgot-password">Forgot password?</p>
            </div>

            <input class="form__input-submit" type="submit" value="Log in" />

        {% endform %}
        <div class="redirect">
            <p class="p--secondary mb--md mt--md">Don't have an account yet?</p>
            <a class="btn--secondary redirect--btn" href="{{routes.account_register_url}}">create an account</a>
        </div>
    </div>
    <div class="create-customer__container--inner disabled reset-password">
        <h3 class="heading--tertiary create-customer__heading">Forgot Password</h3>
        <p class="p--secondary create-customer__p">Enter your email below to receive an email to reset your password.</p>
        {% form 'recover_customer_password' %}
            {{ form.errors | default_errors }}

            <label for="customer_email" class="p--secondary">Email Address</label>
            <input class="form__input" type="email" name="email" placeholder="andy@avexdesigns.com" required/>

            <input id="user_email" class="form__input-submit" type="submit" value="Submit" />
        {% endform %}
    </div>
</div>

<script>
    const createCustomer = document.querySelector('.create-customer');
    const resetPassword = document.querySelector('.reset-password');
    const forgotPassword = document.querySelector('.redirect__forgot-password');
    forgotPassword.addEventListener('click',(e)=>{
        createCustomer.classList.add('disabled');
        resetPassword.classList.remove('disabled');
    })
</script>

