{{ 'style.home-hero.css' | asset_url | stylesheet_tag }}
<div class="homepage-hero">
    <div class="homepage-hero__content">
        <h1 class="heading--primary">{{ section.settings.hero_title }}</h1>
        <p class="p--primary mb--sm">{{ section.settings.hero_text }}</p>
        <a href="{{section.settings.hero_cta_url}}" class="homepage-hero__btn">
          {{section.settings.hero_cta_label}}
          {{'right-arrow.svg' | asset_url | img_tag: 'right arrow button', 'btn__icon'}}
        </a>
    </div>
</div>

<style>
    .homepage-hero{
        background-image: url("{{section.settings.hero_image.src | img_url: '1000x'}}");
    }
</style>
{% schema %}
{
  "name": "Homepage Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
        "type": "text",
        "id": "hero_title",
        "label": "Hero Title",
        "default":"Team barbell"
      },
      {
        "type": "text",
        "id": "hero_text",
        "label": "Hero Text",
        "default":"Team Barbell was to design a piece of equipment that matches the performance and quality of other elite level competition bars."
      },
      {
        "type": "text",
        "id": "hero_cta_label",
        "label": "Hero Cta Label",
        "default":"Explore"
      },
      {
        "type": "url",
        "id": "hero_cta_url",
        "label": "Hero Cta Url"
      }
  ],
  "blocks": [

  ]
}
{% endschema %}